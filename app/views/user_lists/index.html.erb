<div class="container">
  <div class="row">

  <table class='table table-hover table-inverse'>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name %></td>
          <td><%= user.email %></td>
            <td><% if c.is_deleted == true %>
              <p>退会</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
  </table>
  </div>
</div>
